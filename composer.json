{
    "name": "ubccr/blat",
    "description": "The BLAT server applied on insect genomes",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "Center for Computational Research, the University at Buffalo",
            "email": "ccr@buffalo.edu"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "7.2.0",
        "league/csv": "9.6.2",
        "league/json-guard": "1.0.1",
        "monolog/monolog": "1.25.5",
        "psr/http-message": "1.0.1",
        "slim/slim": "3.9.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.57",
        "phpunit/phpunit": "^9.4.2",
        "squizlabs/php_codesniffer": "^3.5.8"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "CCR\\BLAT\\": "lib"
        },
        "classmap": [
            "lib/"
        ]
    },
    "config": {
        "platform": {
            "php": "7.4.11",
            "ext-bcmath": "7.1",
            "ext-curl": "7.1",
            "ext-xml": "7.1",
            "ext-yaml": "2.0"
        },
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
