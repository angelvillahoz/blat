# Configuration for the BLAT endpoint.
blat:
    url: 'blat_server:80'

# Credentials for the BLAT database.
database:
    host: 'mariadb_server'
    name: 'blat'
    user: 'blat'
    password: '<MYSQL_PASSWORD>'

# Configuration that affects the application as a whole.
general:
    blat_version: '2.0.0'
    site_base_url: '<BLAT_BASE_URL>'
    site_base_dir: '/var/www/'
    site_auth_realm: '<SITE_AUTH_REALM>'

# The URLs for the REST API.
rest:
    base_url: 'api'
